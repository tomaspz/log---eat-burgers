<div class="container-fluid">
  <div class="row">
    <div class="col-12 text-center">
      <hr>
      <h2>KITCHEN</h2>
      <hr>
      <h4>Create Your Own Burger: </h4>
      <form class="create-form form-group justify-content-center">
        <div class="input-group w-25 mx-auto">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" class="form-control" name="burger_name">
          <button id="add-burger" class="btn btn-primary btn-lg btn-block" type="submit">Add Burger</button>
        </div>  
      </form>
    </div>
  </div>
</div>