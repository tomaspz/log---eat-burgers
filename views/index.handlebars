<div class="jumbotron jumbotron-fluid">
  <div class="container text-center">
    <h1 class="display-4">BURGERS</h1>
    <p class="lead">Create your own burgers and eat them!</p>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col-6">
      <hr>
      <h2 class="text-center"> MENU </h2>
      <hr>
      <h4 class="text-center">Burgers Available To Eat:</h4>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-6">
      <hr>
      <h2 class="text-center"> SOLD </h2>
      <hr>
      <h4 class="text-center">Burgers Not Available To Eat:</h4> 
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>
</div>

