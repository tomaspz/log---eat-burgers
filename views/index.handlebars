<div class="jumbotron jumbotron-fluid">
  <div class="container text-center">
    <h1 class="display-4">BURGERS</h1>
    <p class="lead">Create your own burgers and eat them!</p>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <h2 class="text-center">Burgers available to eat: </h2>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <h2 class="text-center">Burgers already eaten: </h2>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col-12 text-center">
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="burger_name">
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>